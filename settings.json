{
  // Instalar JetBrains Mono
  // Instalar a extens√£o Symbols, Min Theme, Apc Customize UI++ e prettier
  "workbench.colorTheme": "Min Dark",
  "symbols.hidesExplorerArrows": false,
  "workbench.iconTheme": "symbols",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.rulers": [80,120],
  "workbench.startupEditor": "newUntitledFile",
  "editor.renderLineHighlight": "gutter",
  "editor.fontLigatures": true,
  "workbench.editor.labelFormat": "short",
  "explorer.compactFolders": false,
  "editor.semanticHighlighting.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.location": "hidden",
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "workbench.statusBar.visible": false,
  "apc.electron": {
      "titleBarStyle": "hiddenInset",
      "frame": false
  },
  "apc.stylesheet": {
      ".titlebar-center": "display: none !important;"
    },
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "explorer.fileNesting.enabled": true,
  // File Nesting para arquivos json e para o tailwind, customize da com as linguagens ou frameworks que achar melhor.
    "explorer.fileNesting.patterns": {  
      "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, package-lock*, bun.lockb",
      "tailwind.config*": "tailwind.config*, postcss.config*"
    },
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
}